{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/app.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/web/build/index.html"
    }
  ]
}
