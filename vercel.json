{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/build/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "web/build/$1"
    }
  ]
}